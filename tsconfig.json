{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "lib": ["ESNext", "DOM", "ES2017"],
    "sourceMap": true,
    "incremental": true,
    "esModuleInterop": true,
    "rootDir": "./src"
  },
  "include": ["src/*"],
  "exclude": ["node_modules", "dist", "*test.ts", "**/*spec.ts"]
}
